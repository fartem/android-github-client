<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppToolbarTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <style name="AppContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppRecyclerViewItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/common_padding</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="AppRecyclerViewItemTitle" parent="AppProfileInfoTextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppProfileInfoTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppProfileInfoSubTextView" parent="AppProfileInfoTextView">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
    </style>

    <style name="AppRepositoryInfoTextViewWithIcon" parent="AppProfileInfoSubTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="AppProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTopProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-7dp</item>
        <item name="android:layout_marginBottom">-7dp</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="AppProgressBarItemLoad">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height_load_indicator</item>
        <item name="android:padding">@dimen/common_padding_half</item>
    </style>
</resources>
