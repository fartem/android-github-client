<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppRecyclerViewItem"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/profile_avatar"
        android:layout_width="@dimen/image_size_profile_in_list"
        android:layout_height="@dimen/image_size_profile_in_list" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_margin"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/profile_login"
            style="@style/AppRecyclerViewItemTitle"
            tools:text="john_doe" />

        <TextView
            android:id="@+id/profile_type"
            style="@style/AppProfileInfoSubTextView"
            tools:text="User" />

    </LinearLayout>

</LinearLayout>
